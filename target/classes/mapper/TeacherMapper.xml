<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kewen.hms.mapper.TeacherMapper">
    <!-- 显示所有教师信息 -->
    <select id="findTeachers" resultType="Teacher">
        select *
        from teacher
    </select>
    <!-- 登录查询 -->
    <select id="findPwdById" parameterType="int" resultType="String">
        select t_pwd
        from teacher
        where t_id = #{t_id}
    </select>
    <!-- 根据名字查询教师信息 -->
    <select id="findTeacherByName" parameterType="String" resultType="Teacher">
        select *
        from teacher
        where t_name = #{t_name}
    </select>
    <!-- 根据名字查询教师信息 -->
    <select id="findTeacherById" parameterType="int" resultType="Teacher">
        select *
        from teacher
        where t_id = #{t_id}
    </select>
    <!-- 修改学生信息 -->
    <update id="updateTeacher" parameterType="Teacher">
        update teacher
        set t_number = #{t_number},
            t_pwd    = #{t_pwd},
            t_name   = #{t_name}
        where t_id = #{t_id}
    </update>
    <!-- 添加信息 -->
    <insert id="addTeacher" parameterType="Teacher">
        insert into teacher (t_id, t_pwd, t_name)
        values (#{t_id}, #{t_pwd}, #{t_name})
    </insert>
    <!-- 根据id删除信息 -->
    <delete id="deleteTeacher" parameterType="int">
        delete
        from teacher
        where t_id = #{t_id}
    </delete>
</mapper>